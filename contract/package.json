{
  "name": "@chainlink/box",
  "version": "0.6.0",
  "description": "A Chainlink example in a Truffle box",
  "scripts": {
    "compile": "npx truffle compile",
    "console:dev": "npx truffle console --network cldev",
    "console:live": "npx truffle console --network live",
    "depcheck": "echo '@chainlink/box' && depcheck --ignore-dirs=build/contracts || true",
    "solhint": "solhint ./contracts/**/*.sol",
    "lint": "yarn solhint",
    "migrate:dev": "npx truffle migrate --reset --network cldev",
    "migrate:rinkeby": "npx truffle migrate --reset --network rinkeby",
    "migrate:kovan": "npx truffle migrate --reset --network kovan",
    "migrate:live": "npx truffle migrate --network live",
    "test": "yarn compile && npx truffle test",
    "format": "yarn prettier --write .",
    "generate-types:web3": "typechain --target=web3-v1 'build/contracts/*.json' --outDir=../types/web3",
    "generate-types:ethers": "typechain --target=ethers-v5 'build/contracts/*.json' --outDir=../frontend/packages/react-app/src/types",
    "postinstall": "yarn compile && yarn generate-types:web3 && yarn generate-types:ethers"
  },
  "license": "MIT",
  "dependencies": {
    "@chainlink/contracts": "^0.0.10",
    "@iroiro/merkle-distributor": "^1.1.0",
    "@openzeppelin/cli": "^2.8.2",
    "@openzeppelin/contracts": "^3.2.0",
    "@truffle/hdwallet-provider": "^1.0.40",
    "dotenv": "^8.2.0"
  },
  "devDependencies": {
    "@chainlink/belt": "^0.0.1",
    "@chainlink/test-helpers": "0.0.5",
    "@openzeppelin/test-environment": "^0.1.5",
    "@openzeppelin/test-helpers": "^0.5.6",
    "@typechain/ethers-v5": "^5.0.0",
    "@typechain/web3-v1": "^1.0.0",
    "chai": "^4.2.0",
    "depcheck": "^0.9.1",
    "mocha": "^8.1.3",
    "solhint": "^2.1.0",
    "truffle": "^5.1.5",
    "typechain": "^4.0.0"
  }
}
